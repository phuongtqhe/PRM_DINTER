<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btnEnglish"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/button_bound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_language_frame">

        <ImageView
            android:id="@+id/lang_flag"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/english_rounded_flag" />

        <TextView
            android:id="@+id/lang_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/lang_flag"
            android:layout_weight="1"
            android:text="@string/language_english"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/lang_rdo"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="3dp"
            android:buttonTint="#0055FF"
            android:checked="false"
            android:clickable="false" />
    </RelativeLayout>

</RelativeLayout>